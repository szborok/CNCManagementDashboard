          // Update base path and auto-generate sub-paths
          updateStorage({
            basePath: folderPath,
            logsPath: `${folderPath}/logs`,
            backupPath: `${folderPath}/backups`,
            tempPath: `${folderPath}/temp`,
            outputPath: `${folderPath}/output`,
          });
        } else {
          updateStorage({ [pathType]: folderPath });
        }
      }
    };

    input.click();
