function CompanyStep({
  config,
  updateConfig,
}: {
  config: SetupConfig;
  updateConfig: (updates: Partial<SetupConfig>) => void;
}) {
  // Set demo mode defaults when demo mode is enabled
  React.useEffect(() => {
    if (config.demoMode) {
      updateConfig({
        companyName: "Test Company",
        companyLogo: "/api/placeholder/150/150", // Placeholder logo for demo
        companyFeatures: {
          jsonScanner: true,
          toolManager: true,
          clampingPlateManager: true,
        },
        modules: {
          ...config.modules,
          jsonAnalyzer: {
            ...config.modules.jsonAnalyzer,
            enabled: true,
          },
          matrixTools: {
            ...config.modules.matrixTools,
