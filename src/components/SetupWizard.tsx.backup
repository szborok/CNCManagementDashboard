                        className={`relative z-10 flex items-center justify-center w-8 h-8 rounded-full border-2 transition-all duration-300 ${
                          test.status === "running"
                            ? "border-purple-500 bg-purple-100 dark:bg-purple-900/50"
                            : test.status === "success"
                            ? "border-green-500 bg-green-100 dark:bg-green-900/50"
                            : test.status === "error"
                            ? "border-red-500 bg-red-100 dark:bg-red-900/50"
                            : "border-gray-300 bg-white dark:bg-gray-700"
                        }`}
                      >
                        {getStatusIcon(test.status)}
                      </div>
                      {index < initTests.length - 1 && (
                        <div
                          className={`w-0.5 h-8 mt-1 transition-all duration-500 ${
                            test.status === "success" ||
                            (test.status === "error" &&
                              initTests[index + 1].status !== "pending")
                              ? "bg-purple-300 dark:bg-purple-600"
                              : "bg-gray-200 dark:bg-gray-600"
                          }`}
                        ></div>
                      )}
                    </div>
                  </div>

                  {/* Test content */}
                  <div className="flex-1 min-w-0">
                    <div className="flex items-start justify-between">
                      <div className="flex-1">
                        <h4
                          className={`font-medium transition-colors duration-300 ${getStatusColor(
                            test.status
                          )}`}
                        >
                          {test.name}
                          <span
                            className={`ml-2 px-2 py-0.5 text-xs rounded-full transition-all duration-300 ${
                              test.status === "running"
                                ? "bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300"
                                : test.status === "success"
                                ? "bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300"
                                : test.status === "error"
                                ? "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300"
                                : "bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400"
                            }`}
                          >
                            {test.status === "pending" && "Pending"}
                            {test.status === "running" && "Initializing..."}
                            {test.status === "success" && "Ready"}
                            {test.status === "error" && "Failed"}
                          </span>
                        </h4>
                        <p className="text-sm text-gray-600 dark:text-gray-400 mt-1">
                          {test.description}
                        </p>

                        {test.status === "running" && (
                          <div className="mt-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5 overflow-hidden">
                            <div className="h-full bg-purple-500 rounded-full animate-pulse w-3/5"></div>
                          </div>
                        )}

                        {test.error && (
                          <div className="mt-3 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
                            <div className="flex items-start gap-2">
                              <AlertCircle className="h-4 w-4 text-red-600 dark:text-red-400 mt-0.5 flex-shrink-0" />
                              <div className="text-sm">
                                <strong className="text-red-700 dark:text-red-300">
                                  Initialization Error:
                                </strong>
                                <p className="text-red-700 dark:text-red-300 mt-1">
                                  {test.error}
                                </p>
                              </div>
                            </div>
                          </div>
                        )}
                      </div>

                      <div className="flex-shrink-0 ml-4">
                        <span className="text-xs text-gray-400 font-mono">
                          #{(index + 1).toString().padStart(2, "0")}
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>

            {/* Initialization Progress */}
            <div className="space-y-2">
              <div className="flex justify-between items-center">
                <span className="text-sm font-medium text-gray-700 dark:text-gray-300">
                  Initialization Progress
                </span>
                <span className="text-sm text-gray-600 dark:text-gray-400">
                  {initTests.filter((t) => t.status === "success").length} /{" "}
                  {initTests.length} initialized
                </span>
              </div>
              <div className="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 overflow-hidden">
                <div
                  className="h-full bg-gradient-to-r from-purple-500 to-green-500 rounded-full transition-all duration-500 ease-out"
                  style={{
                    width: `${
                      (initTests.filter((t) => t.status === "success").length /
                        initTests.length) *
                      100
                    }%`,
                  }}
                ></div>
              </div>
            </div>

            {/* Initialization Controls */}
            <div className="flex justify-center pt-6 border-t border-gray-200 dark:border-gray-700">
              {!isInitComplete && (
                <Button
                  onClick={runInitialization}
                  disabled={isInitRunning}
                  size="lg"
                  className="bg-purple-600 hover:bg-purple-700 text-white px-8 py-3"
                >
                  {isInitRunning ? (
                    <>
                      <RefreshCw className="h-5 w-5 mr-2 animate-spin" />
                      Initializing Features...
                    </>
                  ) : (
                    <>
                      <Rocket className="h-5 w-5 mr-2" />
                      Initialize Features
                    </>
                  )}
                </Button>
              )}

              {isInitComplete && (
                <div className="text-center space-y-4 w-full max-w-md">
                  <div className="p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
                    <div className="flex items-center gap-2 text-green-800 dark:text-green-300">
                      <CheckCircle2 className="h-5 w-5" />
                      <span className="font-medium">
                        All features initialized successfully!
                      </span>
                    </div>
                    <p className="text-sm text-green-700 dark:text-green-400 mt-1">
                      Your CNC Management Dashboard is fully operational with all
                      modules tested and ready for use.
                    </p>
                  </div>
                </div>
              )}
            </div>
          </CardContent>
        </Card>
      )}
    </div>
  );
}
